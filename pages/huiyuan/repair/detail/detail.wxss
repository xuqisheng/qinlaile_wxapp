/* detail.wxss */
page{
  background: #eee;
}

.main{
  background: white;
  font-size: 26rpx;
  height: 100%;
  width: 100%
}

.main .status{
  border-top: 1rpx solid lightgray;
  height: 60rpx;
  padding: 0 20rpx;
}

.main .status .attr{
  color: #444;
  line-height: 60rpx;
}

.main .status .wrapper{
  line-height: 60rpx;
  float: right;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  
}

.main .status .wrapper .text{
  height: 40rpx;
  line-height: 40rpx;
  margin: 10rpx 0;
  padding-right: 20rpx;
  color: #f26d7e;
}

.main .status .wrapper .gray{
  height: 40rpx;
  line-height: 40rpx;
  margin: 10rpx 0;
  padding-right: 20rpx;
  color: gray;
}


.main .status .wrapper .call{
  border-left: 1rpx solid lightgray;
  padding-left: 20rpx;
  height: 40rpx;
  width: 40rpx;
}

.main .time{
  border-top: 1rpx solid lightgray;
  color: #444;
  height: 60rpx;
  padding: 0 20rpx;
}

.main .time .attr{
  line-height: 60rpx;
}

.main .time .value{
  line-height: 60rpx;
  float: right;
}

.main .time .address{
  font-size: 22rpx;
  line-height: 60rpx;
  float: right;
}

.main .time .money{
  color: #f26d7e;
  line-height: 60rpx;
  float: right;
}

.main .description{
  border-top: 1rpx solid lightgray;
  display: -webkit-flex;
  flex-direction: column;
}

.main .description{
  padding: 0 20rpx;
}

.main .description .attr{
  color: #444;
  height: 60rpx;
  line-height: 60rpx;
}

.main .description .value{
  height: 60rpx;
  line-height: 60rpx;
  color: gray;
}

.main .imgs{
  padding: 20rpx;
  border-top: 1rpx solid lightgray;
  
}

.main .imgs .img{
  height: 160rpx;
  width: 160rpx;
}

.main .reply{
  width: 100%;
}

.main .reply .title{
  color: #f26d7e;
  padding-left: 20rpx;
  border-top: 1rpx solid lightgray;
  height: 60rpx;
  line-height: 60rpx;
}

.main .reply .reason{
  color: gray;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
}

.main .reply .time2{
  text-align: right;
  color: gray;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  padding-right: 20rpx;

}

.frm .radio{
  border-top: 20rpx solid #eee;
  font-size: 28rpx;
  color: black;
  padding: 20rpx;
  height: 90rpx;
  display: -webkit-flex;
}

.frm .radio .icon{
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
}

.frm .radio .name{
  line-height: 90rpx;
}

.frm .radio .box{
  line-height: 90rpx;
  float: right;
  /*绝对定位靠右*/
  position: absolute;
  right: 10rpx
}

.main .action-status{
  background: white;
  width: 100%;
  position: fixed;
  bottom: 0;
  padding: 20rpx 0;
  display: -webkit-flex;
  justify-content: space-around;
}

.main .action-status .pay{
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  text-align: center;
  color: white;
  font-size: 30rpx;
  background: #42c017;
}

.main .action-status .cancel{
  width: 90%;
  border: 2rpx solid #42c017;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  text-align: center;
  color: #42c017;
  font-size: 30rpx;
  background: white;
}

