/* comment.wxss */
page{
  background: #eee;
}

.main{
  width: 100%;
  height: 100%;
  background: white;
}

.main .title{
  border-top: 1rpx solid lightgray;
  text-align: center;
  font-size: 32rpx;
  padding: 20rpx;
}

.main .stars{
  height: 60rpx;
  display: -webkit-flex;
  justify-content: center;
  line-height: 60rpx;
  color: orange;
}

.main .stars .star{
  height: 40rpx;
  width: 40rpx;
}

.main .stars .level{
  margin-left: 20rpx;
  font-size: 28rpx;
}

.main .content{
  padding: 20rpx 0;
  border-top: 20rpx solid #eee;
  font-size: 28rpx;
  display: -webkit-flex;
}

.main .content .attr{
  padding-left: 20rpx;
  margin-right: 20rpx;
}

.main .content .value{
  height: 200rpx;
  color: gray;
}

.main .image{
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
  font-size: 28rpx;
  display: -webkit-flex;
}

.main .image .attr{
  padding-left: 20rpx;
  margin-right: 20rpx;
}

.main .image .img{
  height: 160rpx;
  width: 160rpx;
}

.main .action-status{
  background: white;
  width: 100%;
  position: fixed;
  bottom: 0;
  padding: 20rpx 0;
  display: -webkit-flex;
  justify-content: space-around;
}

.main .action-status .pay{
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  text-align: center;
  color: white;
  font-size: 30rpx;
  background: #42c017;
}