<!--picker.wxml-->

<!--使用picker-view组件-->
<picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;padding:20rpx;" 
  value="{{content}}" bindchange="bindContentChange">
  <picker-view-column>
    <view wx:for="{{provinces}}" style="line-height: 50px">{{item.name}}</view>
  </picker-view-column>
</picker-view>

<view style="text-align:center;margin-top:200rpx">
  <text bindtap="confirm" class="confirm">确定</text>
</view>

