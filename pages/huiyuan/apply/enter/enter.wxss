/* enter.wxss */
.main{
  height: 100%;
  width: 100%;
}

.main .item{
  border-top:1rpx solid lightgray;
  font-size: 28rpx;
  padding-left: 20rpx;
  height: 70rpx;
  width: 100%; 
  display: -webkit-flex;
}

.main .item .attr{
  width: 20%; 
  line-height: 70rpx;
  height: 70rpx;
}

.main .item .value{
  width: 75%; 
  line-height: 70rpx;
  height: 70rpx;
}

.main .image-title{
  border-top:15rpx solid #eee;
  border-bottom:15rpx solid #eee;
  height: 60rpx;
  width: 100%; 
  padding-left: 20rpx;
  line-height: 60rpx;
  font-size: 26rpx;
}

.main .img{
  height: 160rpx;
  width: 160rpx;
  margin: 20rpx;
}

.main .wrapper{
  padding: 20rpx;
  height: 60rpx;
  border-top:15rpx solid #eee;
  font-size: 26rpx;
  display: -webkit-flex;
  align-items: center;
}

.main .wrapper .agree{
  margin-left: 20rpx;
}

.main .wrapper .license{ 
  color: #42c017;
}

.main .button{
  width: 100%;
  position: fixed;
  z-index: 1;
  bottom: 0;
  height: 100rpx;
  background: white;
}

.main .button .input{
  border-radius: 10rpx;
  height: 60rpx;
  background: #42c017;
  color: white;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 20rpx 5%;
  width: 90%;
}

.main .placeholder{
  height: 100rpx;
}