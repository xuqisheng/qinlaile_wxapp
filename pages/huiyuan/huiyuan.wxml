<!--pages/huiyuan/huiyuan.wxml-->
<!--用户未登录-->
<view class="login" wx:if="{{!_login}}">
  <view class="wrapper divider">
    <view class="new-user">我是新用户</view>
    <view class="round-border green-text">立即注册成为亲来了会员</view>
  </view>
  
  <view class="wrapper">
    <view class="new-user">已有账号</view>
    <form>
      <view class="round-border">
        <input type="text" class="code" placeholder="请输入手机号码" placeholder-style="font-size: 28rpx;"/>
      </view>
      
      <view style="position:relative;height:60rpx">
        <view class="round-border sec-code" style="padding-left:4rpx;padding-right:0rpx">
          <input type="text" class="code" style="float: left;" placeholder="请输入验证码" placeholder-style="font-size: 28rpx;"/>
        </view>
        <text class="get-code">获取验证码</text>
      </view>
    </form>

    <view class="round-border green-text bg">注册</view>

    <view class="new-user">第三方平台登录</view>

    <view class="trd">
      <image class="icon" src="../../res/qq.png"></image>

      <image class="icon" src="../../res/wechat.png"></image>
    </view>
  </view>
  


</view>

<!--用户已登录-->
<view class="personal" wx:else>
  已登录
</view>
