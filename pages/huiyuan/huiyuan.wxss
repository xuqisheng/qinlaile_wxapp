/*登录按钮*/
.login{
  height: 100%;
  width: 100%;
   /*display: -webkit-flex;
        display: flex;
        -webkit-align-items: center;
              align-items: center;
        -webkit-justify-content: center;
              justify-content: center; */
}

.login .button{
  text-align: center;
  font-size: 34rpx;
  color: rgb(66, 192, 23); 
  position: absolute;
  top: 50%;
  width: 100%;
}

/********************登录状态下的个人中心********************/
.top{
  height: 160rpx;
  display: flex;
  flex-direction: row;
  background-color: rgb(66, 192, 23)
}

/*圆角头像*/
.avatar {
  flex-grow: 0;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  line-height: 160rpx;
}

/*中间部分占满剩余空间*/
.middle{
  flex-grow: 1;
  height: 160rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between
}

/*姓名和评分*/
.desc{
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/*姓名*/
.name{
  font-size: 30rpx;
  margin: 14rpx;
  color: white
}

/*向右箭头*/
.right{
  float: right;
  margin-right: 20rpx;
  color: white;
  font-size: 40rpx
}

/*定位等每个条目的外层*/
.item-wrapper{
  padding: 20rpx;
  border-bottom: 1rpx solid lightgray;
  display: flex;
  flex-direction: row;
  align-items: center
}

/*定位的文字描述*/
.loacation-content{
  font-size: 24rpx;
  color: gray;
  margin-top: 10rpx;
  margin-left: 20rpx;
}

/*区块控制左侧缩进*/
.section-wrapper{
  padding-left: 20rpx;
}

/*单个条目，有分割线*/
.item{
  padding: 20rpx 0;
  border-bottom: 1rpx solid lightgray;
  display: flex;
  flex-direction: row;
  align-items: center
}

/*条目的小图标*/
.item-icon{
  width:44rpx;
  height:40rpx;
}

/*条目的文字*/
.item-text{
  color: rgb(102, 102, 102);
  margin-left: 20rpx;
  font-size: 30rpx;
}

.noborder{
  border :0rpx;
}