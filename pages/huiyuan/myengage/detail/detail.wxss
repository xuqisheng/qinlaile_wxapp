/* detail.wxss */
page{
  background: #eee;
}

.main{
  width: 100%;
  /* height: 100%; */
  background: white;
  border-bottom: 1rpx solid lightgray
}

.main .item{
  display: -webkit-flex;
  font-size: 28rpx;
  padding: 20rpx;
  border-top: 1rpx solid lightgray
}

.main .item .attr{
  color: #444
}

.main .item .value{
  color: gray;
  position: fixed;
  right:0;
  padding-right: 20rpx
}

.main .item .money{
  color: #f26d7e;
  position: fixed;
  right:0;
  padding-right: 20rpx
}

.main .time{
  font-size: 28rpx;
  border-top: 1rpx solid lightgray;
  color: #444;
  height: 68rpx;
  padding: 0 20rpx;
}

.main .time .attr{
  line-height: 68rpx;
}

.main .time .value{
  margin-top: 10rpx;
  line-height: 68rpx;
  float: right;
}


.paydone .title{
  padding: 20rpx;
  border-top: 20rpx solid #eee;
  font-size: 28rpx;
}

.frm .title{
  border-top: 20rpx solid #eee;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
  color: #42c017;
  font-size: 28rpx;
}


.main .item .red{
  color: #f26d7e;
  position: fixed;
  right:0;
  padding-right: 20rpx
}

.frm .radio{
  border-top: 20rpx solid #eee;
  font-size: 28rpx;
  color: black;
  padding: 20rpx;
  height: 90rpx;
  display: -webkit-flex;
}

.frm .radio .icon{
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
}

.frm .radio .name{
  line-height: 90rpx;
}

.frm .radio .box{
  line-height: 90rpx;
  float: right;
  /*绝对定位靠右*/
  position: absolute;
  right: 10rpx
}

.main .action-status{
  background: white;
  width: 100%;
  position: fixed;
  bottom: 0;
  padding: 20rpx 0;
  display: -webkit-flex;
  justify-content: space-around;
}

.main .action-status .action-button{
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  text-align: center;
  color: white;
  font-size: 30rpx;
  background: #42c017;
}

.main .action-status .cancel{
  width: 90%;
  border: 2rpx solid #42c017;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  text-align: center;
  color: #42c017;
  font-size: 30rpx;
  background: white;
}