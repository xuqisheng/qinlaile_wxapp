/* contact.wxss */
.main{
  height: 100%;
  width: 100%;
  font-size: 30rpx;
  color: #444;

}

.main .hotline{
  border-top: 1rpx solid lightgray;
  height: 60rpx;
  padding-left: 20rpx;
}

.main .hotline .mobile{
  line-height: 60rpx;
}

.main .icon{
  height: 40rpx;
  width: 40rpx;
  line-height: 60rpx;
  float: right;
  position: relative;
  margin: 10rpx 20rpx;
}

.main .wx{
  border-top: 1rpx solid lightgray;
  border-bottom: 1rpx solid lightgray;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
}

.main .bottom{
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  margin-top: 300rpx;
}
.main .bottom .qr{
  height: 300rpx;
  width: 300rpx;
}

.main .bottom .name{
  font-size: 26rpx;
  color: gray;
  margin-top: 20rpx;
}