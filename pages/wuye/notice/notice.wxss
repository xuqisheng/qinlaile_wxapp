/* notice.wxss */
.main{
  width: 100%;
  height: 100%;
}

.main .wrapper{
  display: -webkit-flex;
  width: 100%;
  flex-direction: column;
  padding:0 20rpx;
}

.main .wrapper .title{
  padding-top: 20rpx;
  margin-right: 20rpx;
  border-top: 1rpx solid lightgray;
  font-size: 30rpx;
  color: #444;
}

.main .wrapper .desc{
  padding-right: 20rpx;
  font-size: 26rpx;
  color: gray;
  margin-top: 20rpx;
}

.main .wrapper .time{
  padding-right: 30rpx;
  text-align: right;
  font-size: 26rpx;
  color: gray;
  margin: 20rpx 0;
  /* border-bottom: 1prx solid lightgray; */
}

.main .empty{
  height: 100%;
  width: 100%;
}

.main .empty .text{
  text-align: center;
  font-size: 34rpx;
  color: #f26d7e;
  position: absolute;
  top: 50%;
  width: 100%;
}
