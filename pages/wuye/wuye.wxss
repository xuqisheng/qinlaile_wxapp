/* wuye.wxss */
.main{
  height: 100%;
  width: 100%;
}

.main .banner{
  background: #efefef;
}

/*轮播图  */
.main .banner .img{
  width:100%;
  height:400rpx;
}

/*物业信息  */
.main .basic{
  display: -webkit-flex;
  width: 100%;
  height: 200rpx;
  align-items: center;
  border-bottom: 1rpx solid lightgray
}

.main .basic .logo{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  margin-left: 30rpx;
}

.main .basic .name{
  font-size: 32rpx;
  color: #42c017;
  /* font-weight: bold */
}

/*可选操作  */
.main .action{
  height: 100rpx;
  display: -webkit-flex;
  justify-content: space-around;
  border-bottom: 20rpx solid lightgray;
  align-items: center;
}

.main .action .item{
  border-radius: 30rpx;
  color: white;
  font-size: 28rpx;
  background: #42c017;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx 0 20rpx;
}

.main .desc{
  padding: 20rpx;
  font-size: 26rpx;
  color: gray;
}

.main .intro{
  font-size: 26rpx;
  padding: 20rpx;
  color: #444;
  display: -webkit-flex;
}

.main .call{
  position: absolute;
  right: 0;
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}