/* public.wxss */
page{
  height: 100%;
  width: 100%;
  background: #eee;
}

/*报修按钮 利用z-index重叠显示 */
.main .repair{
  width: 100%;
  position: fixed;
  z-index: 1;
  bottom: 0;
  height: 100rpx;
  background: white;
}

.main .repair .inner{
  padding: 20rpx;
  display: -webkit-flex;
}

.main .repair .inner .input{
  height: 60rpx;
  line-height: 60rpx;
  width: 80%;
  background: #eee;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: gray;
  padding-left: 20rpx;
}


.main .repair .inner .button{
  height: 60rpx;
  line-height: 60rpx;
  width: 18%;
  background: lightgray;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color: white;
  margin-left: 20rpx;
}


/*报修item  */
.main .wrapper{
  background: white;
  width: 100%;
  display: -webkit-flex;
  flex-direction: column;
  border-top: 1rpx solid lightgray;
  border-bottom: 2rpx solid lightgray;
}

.main .wrapper .top{
  margin: 0 20rpx 0 20rpx;
  display: -webkit-flex;
  border-bottom: 1rpx solid lightgray;
}

/*左侧头像  */
.main .wrapper .top .avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  position: relative;
  float: left;
  margin-top: 20rpx;
  /* background: greenyellow; */
}

/*右侧内容  */
.main .wrapper .top .content{
   /* background: red;  */
  margin-left: 20rpx;
  flex-flow: 100;
}

/*右侧悬浮按钮  */
.main .wrapper .top .action{
  position: absolute;
  right: 20rpx;
  top: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  /* background: greenyellow; */
}

.main .wrapper .top .content .name{
  margin-top: 20rpx;
  font-size: 30rpx;
  color: black;
}

/*日期  */
.main .wrapper .top .content .date{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: gray;
}

/*描述  */
.main .wrapper .top .content .desc{
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #444;
}

/*主图  */
.main .wrapper .top .content .img{
  height: 200rpx;
  width: 200rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

/*点赞和评论  */
.main .wrapper .action{
  width: 100%;
  height: 60rpx;
  display: -webkit-flex;
}

/*操作  */
.main .wrapper .action .actions{
  position: absolute;
  right: 20rpx;
  width: 30%;
  height: 60rpx;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
}

.main .wrapper .action .actions .support{
  display: -webkit-flex;
  align-items: center;
}

.main .wrapper .action .actions .support .icon{
  height: 40rpx;
  width: 40rpx;
  margin: 5rpx;
}

.main .wrapper .action .actions .support .txt{
  font-size: 26rpx;
  color: gray;
  margin: 5rpx;
}

.main .wrapper .action .actions .comment{
  display: -webkit-flex;
  align-items: center;
}

.main .wrapper .action .actions .comment .icon{
  height: 40rpx;
  width: 40rpx;
  margin: 5rpx;
}

.main .wrapper .action .actions .comment .txt{
  font-size: 26rpx;
  color: gray;
  margin: 5rpx;
}


/*评论列表  */
.main .outter .comments{
  margin-top: 20rpx ;
  background: white;

}

.main .outter .comments .title{
  padding: 20rpx;
  font-size: 26rpx;
  color: #f26d7e;
  border-top: 1rpx solid lightgray;
  border-bottom: 1rpx solid lightgray;
}

/*评论item  */
.main .outter .comments .wrapper2{
  background: white;
  width: 100%;
  display: -webkit-flex;
  flex-direction: column;

}

/*最后一个item加长尾巴，否则报修按钮遮挡  */
.main .outter .comments .wrapper2 .placeholder{
  height: 100rpx;
  background: white;
}

.main .outter .comments .wrapper2 .item{
  margin: 0 20rpx 0 20rpx;
  display: -webkit-flex;
  border-bottom: 1rpx solid lightgray;
}

/*左侧头像  */
