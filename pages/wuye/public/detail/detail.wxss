}


.main .outter .comments .wrapper2 .item .content .name{
  margin-top: 20rpx;
  font-size: 30rpx;
  color: black;
}

/*日期  */
.main .outter .comments .wrapper2 .item .content .date{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: gray;
}

/*描述  */
.main .outter .comments .wrapper2 .item .content .desc{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #444;
}