/* goods.wxss */
page{
  background: #eee;
  height: 100%;
	overflow: hidden;
}

.main {
	height: 100%;
	overflow: hidden;
  font-size: 28rpx;
}

.main .banner{
  height: 400rpx;
  background: #f7f7f7;
}

/*轮播图  */
.main .banner .img{
  width:100%;
  height:100%;
}

.main .score{
  background: white;
  width: 100%;
  margin-top: 20rpx;
  display: -webkit-flex;
  padding: 20rpx;
}

.main .score .stars{
  height: 40rpx;
  display: -webkit-flex;
  justify-content: center;
  position: absolute;
  right:20rpx;
}

.main .score .stars .star{
  height: 40rpx;
  width: 40rpx;
}

.main .info{
  background: white;
  width: 100%;
  border-top: 1rpx solid #eee;
  display: -webkit-flex;
  padding: 20rpx;
}

.main .info .price{
  color: red;
}

.main .info .num{
  font-size: 26rpx;
  color: gray;
  position: absolute;
  right:20rpx;
}